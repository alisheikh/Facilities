@model IEnumerable<MBCFM.Models.Job>
<h3 class="header">Jobs Sent to Helpdesk</h3>

@if (Model.Count() > 0)
{<ul class="job-list box">
        @foreach (var job in Model)
        {
            <li>
                <div class="priority"><span>Priority</span><span class="number">@job.Priority</span></div>

                <div class="job-details">
                    <p class="client-job-number">Client Job # <span class="number">@job.ClientJobNo</span></p>
                    <h1><span class="mbc-job-number">#@job.MbcJobNo</span> - <span class="job-title">@job.ClientName</span></h1>
                    <p class="order-type"><span class="label">Order Type</span><span class="info">@job.OrderType</span></p>
                    <p class="order-status"><span class="label">Status</span><span class="info">@job.CurrentStatus</span></p>
                </div>
                <div class="action">
                    @Html.ActionLink("View", "ViewJob", new { mbcJobNo = job.MbcJobNo }, new { @class = "button" })
                </div>
                <div class="clearfix"></div>
            </li>
        }
    </ul>
}
else
{
    <h2>There are no sent to the helpdesk.</h2>
}
