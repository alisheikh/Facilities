@model MBCFM.Models.ChangePassword
<h2>Change Password</h2>
<p>Enter your old password and then your new password, confirm your new password then click change</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="input-group">
        @Html.LabelFor(m => m.OldPassword)
        @Html.EditorFor(m => m.OldPassword)
        @Html.ValidationMessageFor(m => m.OldPassword)
    </div>
    <div class="input-group">
        @Html.LabelFor(m => m.NewPassword)
        @Html.PasswordFor(m => m.NewPassword)
        @Html.ValidationMessageFor(m => m.NewPassword)
    </div>
    <div class="input-group">
        @Html.LabelFor(m => m.Confirmation)
        @Html.PasswordFor(m => m.Confirmation)
        @Html.ValidationMessageFor(m => m.Confirmation)
    </div>

    <button type="submit" class="button">Change</button>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
